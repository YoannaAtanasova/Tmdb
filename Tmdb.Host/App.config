<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>

  <system.serviceModel>
    <services>
      <service name="Tmdb.Host.TmdbService">

        <endpoint address="net.tcp://localhost:8009/TmdbService"
                  binding="netTcpBinding"
                  contract="Tmdb.Contracts.ITmdbSearchService"/>
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding sendTimeout="00:02:00"
                maxReceivedMessageSize="20000000"
                receiveTimeout="00:02:00"
                transactionFlow="true">
          <reliableSession inactivityTimeout="00:02:00"/>
          <security mode="Transport">
            <transport protectionLevel="EncryptAndSign"/>
          </security>
        </binding>
      </netTcpBinding>
    </bindings>
  </system.serviceModel>
</configuration>